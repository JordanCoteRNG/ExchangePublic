doctype html
html(lang='en', data-bs-theme='dark')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title=title
        link(rel='icon', type='image/x-icon', href='img/favicon.ico')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD', crossorigin='anonymous')
        link(href='assets/css/vendor.min.css', rel='stylesheet')
        link(href='assets/css/app.min.css', rel='stylesheet')
        script(src='assets/js/vendor.min.js')
        script(src='assets/js/app.min.js')
    body.theme-red
        #app.app.app-full-height.app-without-header
            .register
                .register-content
                    form(action='/register', method='POST', name='register_form')
                        h1.text-center ENREGISTREMENT
                        p.text-inverse.text-opacity-50.text-center VOTRE CODE D'INVITATION EST REQUIS POUR LA CRÉATION DE VOTRE COMPTE.
                        if error != ""
                            br
                            .alert.alert-danger!=error
                            br
                        if success != ""
                            br
                            .alert.alert-success!=success
                            br
                        .mb-3
                            label.form-label
                                | Nom d'utilisateur
                                span.text-danger *
                            input.form-control.form-control-lg.bg-inverse.bg-opacity-5(type='text', name='username', placeholder="Nom d'utilisateur", value='')
                        .mb-3
                            label.form-label
                                | Email
                                span.text-danger *
                            input.form-control.form-control-lg.bg-inverse.bg-opacity-5(name='email', type='text', placeholder='exemple@exemple.com', value='')
                        .mb-3
                            label.form-label(for='passwordInput')
                                | Mot de passe
                                span.text-danger *
                            input#passwordInput.form-control.form-control-lg.bg-inverse.bg-opacity-5.passwordField(name='password', type='password', value='', placeholder='Mot de passe')
                        .mb-3
                            label.form-label(for='checkPasswordInput')
                                | Confirmer mot de passe
                                span.text-danger *
                            input#checkPasswordInput.form-control.form-control-lg.bg-inverse.bg-opacity-5.passwordField(name='confirmPassword', type='password', value='', placeholder='Mot de passe')
                        .mb-3
                            .form-check
                                input.form-check-input(type='checkbox', value='', onclick='swapPasswordView()')
                                label.form-check-label() Voir les mots de passes
                        .mb-3
                            label.form-label
                                | CODE D'INVITATION
                                span.text-danger *
                            input#hackingField.form-control.form-control-lg.bg-inverse.bg-opacity-5(type='text', value="GÉNÉRATION D'UN FAUX CODE... ", disabled='')
                            br
                            br
                        .mb-3
                            button.btn.btn-outline-theme.btn-lg.d-block.w-100(name='submit', type='submit') Crée un compte
                        .text-inverse.text-opacity-50.text-center
                            | Déjà un compte?
                            a(href='/login') Connectez-vous
        script(src='js/register.js')
        script(src='js/passwordField.js')