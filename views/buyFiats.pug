include ./mixin/header
include ./mixin/radioCrypto

doctype html
html(lang='en', data-bs-theme='dark')
    head
        meta(charset='utf-8')
        title Acheter Fiats
        meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no', name='viewport')
        link(rel='icon', type='image/x-icon', href='img/favicon.ico')
        link(href='assets/plugins/@fortawesome/fontawesome-free/css/all.min.css', rel='stylesheet')
        link(href='assets/plugins/bootstrap-icons/font/bootstrap-icons.css', rel='stylesheet')
        link(href='assets/plugins/jquery-ui-dist/jquery-ui.min.css', rel='stylesheet')
        link(href='assets/plugins/animate.css/animate.min.css', rel='stylesheet')
        link(href='assets/plugins/pace-js/themes/black/pace-theme-flash.css', rel='stylesheet')
        link(href='assets/plugins/perfect-scrollbar/css/perfect-scrollbar.css', rel='stylesheet')
        link(href='assets/plugins/jvectormap-next/jquery-jvectormap.css', rel='stylesheet')
        link(href='assets/css/app.min.css', rel='stylesheet')
        link(href='css/home.css', rel='stylesheet')
    body.theme-red
        #app.app.app-sidebar-collapsed.app-footer-fixed
            +header()
            #content.app.app-content
                .register
                    .register-content
                        form(action='/buy', method='POST', name='buy_fiats_form')
                            h1.text-center ACHATS DE FIATS
                            p.text-inverse.text-opacity-50.text-center VEUILLEZ BIEN VÉRIFIER LES INFORMATIONS AVANT D'ACHETER DU FIATS.
                            if error != ""
                                br
                                .alert.alert-danger!=error
                                br

                            if success != ""
                                br
                                .alert.alert-success!=success
                                br
                            .mb-3
                                label.form-label
                                    | Montant ($CAD)
                                    span.text-danger *
                                input.form-control.form-control-lg.bg-inverse.bg-opacity-5(type='text', name='amount', placeholder="100$", value='')
                            .mb-3
                                label.form-label
                                    | Numéro de carte de crédit :
                                    span.text-danger *
                                input.form-control.form-control-lg.bg-inverse.bg-opacity-5(name='cardNumber', type='text', placeholder='4005519200000004', value='')
                            .mb-3
                                label.form-label
                                    | Date d'expiration
                                    span.text-danger *
                                .mb-1
                                    input.form-control.form-control-lg.bg-inverse.bg-opacity-5(name='expMonths', type='text', placeholder='Mois ex: 01', value='')
                                .mb-1
                                    input.form-control.form-control-lg.bg-inverse.bg-opacity-5(name='expYears', type='text', placeholder='Année ex: 23', value='')
                            .mb-3
                                label.form-label
                                    | Code CVC
                                    span.text-danger *
                                input.form-control.form-control-lg.bg-inverse.bg-opacity-5(name='cvc', type='text', placeholder='323', value='')
                            .mb-3
                                button.btn.btn-outline-theme.btn-lg.d-block.w-100(name='submit', type='submit') Envoyer
            a.btn-scroll-top.fade(href='#', data-toggle='scroll-to-top')
                i.fa.fa-arrow-up

            #footer.app-footer
                p @ 2023 Cryptova, tous droits réservés
        script(src='assets/plugins/pace-js/pace.min.js')
        script(src='assets/plugins/jquery/dist/jquery.min.js')
        script(src='assets/plugins/jquery-ui-dist/jquery-ui.min.js')
        script(src='assets/plugins/bootstrap/dist/js/bootstrap.bundle.min.js')
        script(src='assets/plugins/perfect-scrollbar/dist/perfect-scrollbar.min.js')
        script(src='assets/plugins/js-cookie/dist/js.cookie.min.js')
        script(src='assets/plugins/jvectormap-next/jquery-jvectormap.min.js')
        script(src='assets/plugins/jvectormap-content/world-mill.js')
        script(src='assets/plugins/chart.js/dist/chart.umd.js')
        script(src='assets/plugins/apexcharts/dist/apexcharts.min.js')
        script(src='assets/js/app.min.js')